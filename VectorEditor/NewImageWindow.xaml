<Window x:Class="VectorEditor.NewImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VectorEditor"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Новое изображение" Height="200" Width="300">
    <StackPanel>
        <Label Margin="5" FontWeight="Bold">Size of new image</Label>
        <DockPanel Margin="5">
            <Label HorizontalAlignment="Left" Width="75" >Width</Label>
            <TextBox x:Name="widthTextBox" HorizontalAlignment="Stretch" Margin="10 3 5 3"></TextBox>
        </DockPanel>

        <DockPanel Margin="5">
            <Label HorizontalAlignment="Left" Width="75">Height</Label>
            <TextBox x:Name="heightTextBox" HorizontalAlignment="Stretch" Margin="10 3 5 3"></TextBox>
        </DockPanel>

        <DockPanel HorizontalAlignment="Right" Margin="15">
            <Button Margin="0 0 10 0" Padding="15 2" Click="Button_Click">OK</Button>
            <Button Padding="15 2" Click="Button_Click_1">Cancel</Button>
        </DockPanel>
    </StackPanel>
</Window>
